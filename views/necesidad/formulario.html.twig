{% extends 'index/index.html.twig' %} 

{% block style %}
    {{ parent() }}
    <link rel="stylesheet" href="../styles/formulario.css" type="text/css" media="all" />
{% endblock %}

{% block contenido %} 
    {% block error %}
        {% if error%}
            <h4 id="error"><img src="../../images/error.png" alt="error">{{error}}
                {{necesidad.errores['descripcion']}}<br> 

            </h4>
            <br><br>
        {% endif %} 
    {% endblock %}    
    {{ endblock }}
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <form role="form" id='formAltaNecesidad' method='POST' action="{{host}}necesidad/{{accion}}{% if necesidad %}/{{necesidad.id}}{% endif %}">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label> Descripci√≥n </label>
                            <input {% if necesidad %} value="{{necesidad.descripcion}}"{% endif %} id="necesidad" class="form-control" type="text" name="params[necesidad][descripcion]" maxlength="60" placeholder="Ingrese una descripcion" required ><br><br>        
                        </div>
                    </div>
                </div>
                <button class="btn btn-primary" type="submit">Enviar</button>
                <input type="hidden" value="0" name="aux" />
                <input type="hidden" name="{{token_id}}" value="{{token}}">
            </form>
        </div>
    </div>

{% endblock %}
