{% extends '/index/index.html.twig' %} 

{% block style %}
    {{ parent() }}
    <link rel="stylesheet" href="../styles/formulario.css" type="text/css" media="all" />
{% endblock %}

{% block contenido %}    
    {% block error %}
        {% if error%}
            <h4 id="error"><img src="../../images/error.png" alt="error">{{error}}

                {{servicio.errores['descripcion']}}<br> 
            </h4>
            <br><br>
        {% endif %} 
    {% endblock %}  
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <form id='formAltaServicio' method='POST' action="{{host}}servicio/{{accion}}{% if servicio %}/{{servicio.id}}{% endif %}">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="descripcion"> Descripci√≥n </label>
                            <input {% if servicio %} value="{{servicio.descripcion}}"{% endif %} id="servicio" class="form-control" type="text" name="params[servicio][descripcion]" maxlength="60" placeholder="Ingrese una descripcion" required >       
                        </div>
                    </div>
                </div>
                <button class="btn btn-primary" type="submit">Enviar</button>

                <input type="hidden" value="0" name="aux" />
                <input type="hidden" name="{{token_id}}" value="{{token}}">
            </form>
        </div>
    </div>

{% endblock %}
